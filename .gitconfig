[user]
	name = Roman Larionov
	email = romanylarionov@gmail.com
[color]
	ui = auto
[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore.global
[alias]
	unstage = reset HEAD
	unmerge = reset --merge
	cm = commit -m
	st = status
	br = branch
	co = checkout
	pl = pull --rebase origin
	ps = push origin
	rb = rebase -i origin
    submodinit = submodule update --recursive --init
[credential]
	helper = cache --timeout=9000
[help]
	autocorrect = 1
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    prompt = false
[diff]
    tool = vimdiff
[difftool]
    prompt = false
